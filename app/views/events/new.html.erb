
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="container">
<!-- Example row of columns -->
  <h2>Nouvel evenement</h2>
    <%= simple_form_for @event, url: events_path do |f| %>

      <div class="field">
        <%= f.input :title %>
      </div>

      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, cols:70 %>
      </div>

      <div class="field">
        <%= f.input :tag_ids, as: :select, collection: Tag.order(:title), label_method: :title, input_html: {multiple: true} %>
      </div>

      <div class="field">
        <%= f.label :start_date %><br>
        <%= f.date_field :start_date %>
      </div>
      
      <div class="field">
        <%= f.label :duration %><br>
        <%= f.number_field :duration, min:0, step:5 %>
      </div>
      
      <div class="field">
        <%= f.input :location %><br>
      </div>

      <div class="field">
        <%= f.label :price %><br>
        <%= f.number_field :price, min:1 %>
      </div>
      
      <div class="actions">
        <%= f.submit "Create a new event", class:'btn btn-primary'%>
      </div>
    <% end %>     
</div>